<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_7C7877"
            android:drawableLeft="@drawable/icon_ziyingshangpin"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="自营商品"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_7C7877"
            android:drawableLeft="@drawable/icon_pinkongzhijian"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="品控质检"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="right"
                android:textColor="@color/color_7C7877"
                android:drawableLeft="@drawable/icon_shijiankuai"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="最快19分钟"/>

        </FrameLayout>
    </LinearLayout>

    <com.bee.user.widget.MyGridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:cacheColorHint="@color/white"
        android:numColumns="5"/>
</LinearLayout>