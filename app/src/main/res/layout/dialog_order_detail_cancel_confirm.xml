<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:background="@drawable/bg_round10dp_white"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="取消订单提示"
        android:textColor="@color/color_282626"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_title"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_guanbi" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_3C3838"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="28dp"
        android:text="骑士正在火速接单，请您耐心等待，如仍需
取消订单，建议您有限联系商家协商处理"/>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/tv_des"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancer"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textSize="17sp"
            android:textColor="@color/FF6200"
            android:gravity="center"
            android:background="@drawable/btn_stroke_yellow"
            android:text="申请取消"/>

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_gradient_yellow_round"
            android:text="联系商家"/>
    </LinearLayout>
</RelativeLayout>