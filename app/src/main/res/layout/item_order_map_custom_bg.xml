<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bg_touying1">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/color_282525"
        android:layout_gravity="center_horizontal"
        android:text="商品配送中"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:textColor="@color/color_FF6200"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tv_status"
        android:text="15:00"/>

    <TextView
        android:id="@+id/tv_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/tv_time"
        android:textColor="@color/color_7C7877"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tv_status"
        android:text="送达"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_status"
        android:layout_toRightOf="@+id/tv_status"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_link"/>
</RelativeLayout>