<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_qujiesuan"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/image_xuangou"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_xuangou" />

    <TextView
        android:id="@+id/tv_xuangou_tag"
        app:layout_constraintRight_toRightOf="@+id/image_xuangou"
        app:layout_constraintTop_toTopOf="@+id/image_xuangou"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/cycle"
        android:gravity="center"
        android:visibility="gone"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/tv_heji"
        app:layout_constraintLeft_toRightOf="@+id/image_xuangou"
        app:layout_constraintTop_toTopOf="@+id/image_xuangou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:text="未选购商品"
        android:textColor="@color/color_282626"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_heji_money_pre"
        app:layout_constraintLeft_toRightOf="@+id/tv_heji"
        app:layout_constraintBottom_toBottomOf="@+id/tv_heji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="¥"
        android:visibility="gone"
        android:textColor="@color/color_FF564A"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_heji_money"
        app:layout_constraintLeft_toRightOf="@+id/tv_heji_money_pre"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="10"
        android:visibility="gone"
        android:textColor="@color/color_FF564A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_des"
        app:layout_constraintLeft_toRightOf="@+id/image_xuangou"
        app:layout_constraintTop_toBottomOf="@+id/tv_heji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:text="满20.00元可免费配送"
        android:textColor="@color/color_7C7877"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_gradient_grey_round"
        android:gravity="center"
        android:text="去结算"
        android:textColor="@color/white"
        android:textSize="17sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
