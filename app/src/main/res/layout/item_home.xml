<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round10dp_white"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:paddingBottom="10dp">


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/food" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:text="精品海鲜捞面"
        android:textColor="@color/color_282525"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/color_7C7877"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:background="@drawable/bg_yellow_round_home"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:text=""
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textSize="10sp"
        android:visibility="gone"
        android:textColor="@color/color_FF6200"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_money_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_tag"
        android:layout_marginTop="12dp"
        android:text="¥"
        android:textColor="@color/color_FF5050"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_money_s"
        android:layout_marginTop="7dp"
        android:layout_alignBottom="@+id/tv_money_s"
        android:text="0.0"
        android:textStyle="bold"
        android:textColor="@color/color_FF5050"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tag"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_gouwuche" />

    <TextView
        android:id="@+id/tv_chart_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chart_jiaobiao"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_alignBottom="@+id/iv_chart"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"
        android:text="×0"
        android:textColor="@color/white"
        android:textSize="10sp" />
</RelativeLayout>
