<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/iv_goods_item"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/food2" />

    <ImageView
        android:id="@+id/iv_goods_img_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_stroke_tag" />

    <TextView
        android:id="@+id/iv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_272525"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text=""
        android:layout_alignTop="@+id/iv_goods_img"
        android:layout_toRightOf="@+id/iv_goods_img"
        android:layout_toEndOf="@+id/iv_goods_img" />

    <TextView
        android:id="@+id/iv_goods_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来自地道台湾大师"
        android:textColor="@color/color_7B7777"
        android:textSize="12sp"
        android:layout_below="@+id/iv_goods_name"
        android:layout_alignLeft="@+id/iv_goods_name" />

    <TextView
        android:id="@+id/iv_goods_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余100份  月售2000"
        android:textColor="@color/color_7B7777"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/iv_goods_name"
        android:layout_below="@+id/iv_goods_detail"/>

    <TextView
        android:id="@+id/iv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥10"
        android:textColor="@color/color_FF4F4F"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/iv_goods_img"
        android:layout_alignLeft="@+id/iv_goods_name"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/iv_goods_price_past"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="¥10"
        android:textColor="@color/color_ccc"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/iv_goods_img"
        android:layout_toRightOf="@+id/iv_goods_price"/>

    <com.bee.user.widget.AddRemoveView
        android:id="@+id/iv_goods_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods_img"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_choosetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/btn_gradient_yellow_round"
        android:text="选规格"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>