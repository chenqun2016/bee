                android:background="@drawable/bg_round2dp_red"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

