<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_dingwei_cheng"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上海信建大厦店"
        android:textSize="16sp"
        android:textColor="@color/color_282626"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/image"/>

    <TextView
        android:id="@+id/tv_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上海信建大厦店"
        android:textSize="12sp"
        android:textColor="@color/color_3C3838"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="营业时间：09:00-12:00"
        android:textSize="12sp"
        android:textColor="@color/color_7C7877"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_dizhi"
        app:layout_constraintTop_toBottomOf="@+id/tv_dizhi"/>

    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"/>



    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3公里    大约15分钟"
        android:textSize="12sp"
        android:textColor="@color/color_7C7877"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_F5F5F5"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_tag"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>