<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg_chengse"/>

    <View
        android:id="@+id/statusheight"
        android:layout_width="match_parent"
        android:layout_height="0dp" />



    <ImageButton
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/statusheight"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/transparent"
        android:src="@drawable/icon_back_bai" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/statusheight"
        android:ellipsize="end"
        android:gravity="center"
        android:textStyle="bold"
        android:maxLines="1"
        android:text="限时秒杀"
        android:textColor="@color/white"
        android:textSize="22sp" />



    <com.huaxiafinance.www.crecyclerview.cindicatorview.CIndicatorView
        android:id="@+id/cindicator"
        android:layout_below="@+id/toolbar_title"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>