<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_white_grey"
        android:background="@drawable/bg_gradient_white_grey" />

    <ImageButton
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/transparent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/icon_back_anse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="交易明细"
        android:textColor="@color/color_282626"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="购买米粒"
        android:textColor="@color/color_3C3838"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_title" />

    <TextView
        android:id="@+id/mili_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/color_282626"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mili" />

    <TextView
        android:id="@+id/jiaoyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_7C7877"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mili_num" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_eee"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/jiaoyi"/>


    <TextView
        android:id="@+id/tv_trade_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="业务类型"
        android:textColor="@color/color_7C7877"
        android:textSize="13sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/tv_pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="支付方式"
        android:textColor="@color/color_7C7877"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trade_type" />

    <TextView
        android:id="@+id/tv_trade_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="交易时间"
        android:textColor="@color/color_7C7877"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_type" />

    <TextView
        android:id="@+id/tv_trade_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="交易单号"
        android:textColor="@color/color_7C7877"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trade_time" />

    <TextView
        android:id="@+id/tv_beizhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="备注"
        android:textColor="@color/color_7C7877"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trade_num" />



    <TextView
        android:id="@+id/tv_trade_type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="充值"
        android:textColor="@color/color_3C3838"
        android:textSize="13sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_trade_type"
        app:layout_constraintTop_toTopOf="@+id/tv_trade_type" />

    <TextView
        android:id="@+id/tv_pay_type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="支付宝支付/微信支付"
        android:textColor="@color/color_3C3838"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_trade_type_value"
        app:layout_constraintTop_toTopOf="@+id/tv_pay_type" />

    <TextView
        android:id="@+id/tv_trade_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2020-00-00"
        android:textColor="@color/color_3C3838"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_trade_type_value"
        app:layout_constraintTop_toTopOf="@+id/tv_trade_time" />

    <TextView
        android:id="@+id/tv_trade_num_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="*"
        android:textColor="@color/color_3C3838"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_trade_type_value"
        app:layout_constraintTop_toTopOf="@+id/tv_trade_num" />

    <TextView
        android:id="@+id/tv_beizhu_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="*"
        android:textColor="@color/color_3C3838"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_trade_type_value"
        app:layout_constraintTop_toTopOf="@+id/tv_beizhu" />
</androidx.constraintlayout.widget.ConstraintLayout>