<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingBottom="22dp"
    android:background="@drawable/shadow">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美食烘培店"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:textColor="@color/color_282525"/>


    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10分"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_FF5050"
        android:layout_toRightOf="@+id/tv_title"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3公里"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_7C7877"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/iv_icon"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大约15分钟"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_7C7877"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/tv_distance"/>
    <TextView
        android:id="@+id/tv_sells"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月销3699"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_7C7877"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/tv_time"/>


    <LinearLayout
        android:id="@+id/ll_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_distance"
        android:layout_alignBottom="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/tv_dingwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:visibility="gone"
        android:src="@drawable/icon_dingwei_cheng"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>