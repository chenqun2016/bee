<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@drawable/bg_round10dp_white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="17dp"
        android:paddingBottom="27dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新天地大厦店"
            android:drawableRight="@drawable/icon_link"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_282525"
            android:textSize="17sp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_below="@+id/tv_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_baozhuangfei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview"
            android:layout_marginTop="10dp"
            android:text="包装费"
            android:textColor="@color/color_282525"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_baozhuangfei_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="¥2"
            android:textColor="@color/color_282525"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_peisongfei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_baozhuangfei"
            android:layout_marginTop="20dp"
            android:text="配送费"
            android:textColor="@color/color_282525"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_peisongfei_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_baozhuangfei"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="¥1"
            android:textColor="@color/color_282525"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_youhuiquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_peisongfei"
            android:layout_marginTop="20dp"
            android:text="优惠券"
            android:textColor="@color/color_282525"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_youhuiquan_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_peisongfei"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_link"
            android:drawablePadding="10dp"
            android:text="3张可用"
            android:textColor="@color/FF6200"
            android:textSize="13sp"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tv_youhuiquan_value"
            android:background="@color/color_F5F5F5"/>


        <TextView
            android:id="@+id/tv_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="¥42.9"
            android:textColor="@color/color_282525"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_total_value"
            android:layout_toLeftOf="@+id/tv_total_value"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            android:text="合计："
            android:textColor="@color/color_3B3838"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_total_youhui_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_total_value"
            android:layout_toLeftOf="@+id/tv_total"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="¥12.9"
            android:textColor="@color/color_FF5050"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_total_youhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_total_youhui_value"
            android:layout_toLeftOf="@+id/tv_total_youhui_value"
            android:gravity="center_vertical"
            android:text="合计优惠："
            android:textColor="@color/color_3B3838"
            android:textSize="12sp"/>
    </RelativeLayout>
</FrameLayout>