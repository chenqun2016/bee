<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.huaxiafinance.www.crecyclerview.swipedellayout.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:ios="false"
        app:leftSwipe="true"
        app:swipeEnable="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_round10dp_white">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/food2" />


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/icon"
                    android:text="美食烘培店(陆家嘴店)"
                    android:textColor="@color/color_282525"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/icon"
                    android:text="美食烘培店(陆家嘴店)"
                    android:textColor="@color/color_7C7877"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:background="#ff5050"
            android:gravity="center"
            android:text="删除评价"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </com.huaxiafinance.www.crecyclerview.swipedellayout.SwipeMenuLayout>
</FrameLayout>