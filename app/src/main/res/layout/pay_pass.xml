<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pay_linear"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pay_box1"
            style="@style/InputTextView"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/pay_box2"
            android:layout_marginLeft="8dp"
            style="@style/InputTextView"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/pay_box3"
            android:layout_marginLeft="8dp"
            style="@style/InputTextView"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/pay_box4"
            android:layout_marginLeft="8dp"
            style="@style/InputTextView"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/pay_box5"
            android:layout_marginLeft="8dp"
            style="@style/InputTextView"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/pay_box6"
            android:layout_marginLeft="8dp"
            style="@style/InputTextView"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_eee"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/line_keyboard_pay"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pay_keyboard_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_pay_text"
                android:gravity="center"
                android:text="1"
                android:textColor="#1d1c1e"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/pay_keyboard_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/line_keyboard_pay"
                android:layout_marginRight="@dimen/line_keyboard_pay"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#1d1c1e"
                android:textSize="22sp"
                android:text="2"
                android:background="@drawable/selector_pay_text" />

            <TextView
                android:id="@+id/pay_keyboard_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#1d1c1e"
                android:textSize="22sp"
                android:text="3"
                android:background="@drawable/selector_pay_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/line_keyboard_pay"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pay_keyboard_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#1d1c1e"
                android:textSize="22sp"
                android:text="4"
                android:background="@drawable/selector_pay_text" />

            <TextView
                android:id="@+id/pay_keyboard_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/line_keyboard_pay"
                android:layout_marginRight="@dimen/line_keyboard_pay"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#1d1c1e"
                android:textSize="22sp"
                android:text="5"
                android:background="@drawable/selector_pay_text" />

            <TextView
                android:id="@+id/pay_keyboard_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#1d1c1e"
                android:textSize="22sp"
                android:text="6"
                android:background="@drawable/selector_pay_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/line_keyboard_pay"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pay_keyboard_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#1d1c1e"
                android:textSize="22sp"
                android:text="7"
                android:background="@drawable/selector_pay_text" />

            <TextView
                android:id="@+id/pay_keyboard_eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/line_keyboard_pay"
                android:layout_marginRight="@dimen/line_keyboard_pay"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#1d1c1e"
                android:textSize="22sp"
                android:text="8"
                android:background="@drawable/selector_pay_text" />

            <TextView
                android:id="@+id/pay_keyboard_nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#1d1c1e"
                android:textSize="22sp"
                android:text="9"
                android:background="@drawable/selector_pay_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/line_keyboard_pay"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pay_keyboard_space"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="false"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#1d1c1e"
                android:textSize="22sp"
                android:background="#f5f5f5" />

            <TextView
                android:id="@+id/pay_keyboard_zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/line_keyboard_pay"
                android:layout_marginRight="@dimen/line_keyboard_pay"
                android:gravity="center"
                android:textColor="#1d1c1e"
                android:textSize="22sp"
                android:text="0"
                android:background="@drawable/selector_pay_text" />

            <ImageView
                android:id="@+id/pay_keyboard_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerInside"
                android:background="@drawable/selector_pay_del"
                android:src="@drawable/iconanjian" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>