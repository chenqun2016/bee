<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_topround20dp_white">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_guanbi"
        android:layout_alignParentRight="true" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="选择取消原因"
        android:textColor="@color/color_282626"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerview"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="取消"
            android:textColor="@color/FF6200"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/btn_stroke_yellow" />

        <TextView
            android:id="@+id/btn_2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/btn_gradient_yellow_round"
            />
    </LinearLayout>
</RelativeLayout>